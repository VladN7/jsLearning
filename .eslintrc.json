{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "indent": ["warn", 2],
        "linebreak-style": ["warn", "windows"],
        "quotes": ["warn", "single"],
        "semi": ["warn", "always"],
        "no-console": "warn",
        "no-eval": "warn",
        "eqeqeq": "warn"
    }
}
